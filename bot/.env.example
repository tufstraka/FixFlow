# Server Configuration
PORT=3000
NODE_ENV=development
API_KEY=your_api_key_for_github_actions
JWT_SECRET=your_jwt_secret_here
BOT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/bounty_hunter_bot
POSTGRES_URL=postgresql://user:password@localhost:5432/bounty_hunter_bot

# GitHub Webhook Secret (shared between GitHub App and your server)
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# MNEE Payment Service
MNEE_ENVIRONMENT=sandbox
MNEE_API_KEY=your_mnee_api_key
MNEE_BOT_WIF=your_bot_wif_private_key
MNEE_BOT_ADDRESS=your_bot_mnee_address

# GitHub App Configuration
# These are required for the GitHub App to authenticate
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_NAME=bounty-hunter-bot
GITHUB_APP_PRIVATE_KEY_PATH=./bounty-hunter-bot.pem
# Alternatively, you can provide the private key inline (replace newlines with \n)
# GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# GitHub App OAuth (optional - for user-level auth)
GITHUB_APP_CLIENT_ID=your_github_app_client_id
GITHUB_APP_CLIENT_SECRET=your_github_app_client_secret

# GitHub App Callback URLs
# Set these to your deployment URL + the callback paths
GITHUB_APP_SETUP_REDIRECT_URL=https://your-domain.com/dashboard
GITHUB_APP_OAUTH_REDIRECT_URL=https://your-domain.com/dashboard

# Logging
LOG_LEVEL=info

# Escalation Configuration
ESCALATION_CHECK_INTERVAL=3600000  # 1 hour in milliseconds

# Admin Dashboard
ADMIN_API_KEY=your_admin_api_key_here