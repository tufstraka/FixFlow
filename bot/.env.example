# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/bounty-hunter

# Ethereum Configuration (for smart contracts)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
SEPOLIA_RPC_URL=https://rpc.sepolia.dev
PRIVATE_KEY=your_bot_wallet_private_key_here
BOUNTY_ESCROW_ADDRESS=deployed_bounty_escrow_address

# MNEE API Configuration (for payments)
MNEE_ENVIRONMENT=sandbox  # or 'production'
MNEE_API_KEY=your_mnee_api_key_here
MNEE_BOT_ADDRESS=your_mnee_bot_address_here
MNEE_BOT_WIF=your_mnee_bot_wif_private_key_here

# GitHub App Configuration
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY_PATH=./github-app-private-key.pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# API Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_for_github_actions

# Logging
LOG_LEVEL=info

# Escalation Configuration
ESCALATION_CHECK_INTERVAL=3600000  # 1 hour in milliseconds

# Bot Wallet Configuration
MAX_GAS_PRICE_GWEI=50
GAS_LIMIT_MULTIPLIER=1.2